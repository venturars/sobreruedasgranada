---
import Whatsapp from "../icons/Whatsapp.astro";
import type { Locales } from "../interface";

const { locales } = Astro.props as { locales: Locales.FloatingButton };
---

<aside class="xs:hidden fixed bottom-4 right-4">
  <a
    href={locales.href}
    target="_blank"
    rel="noopener noreferrer"
    class="btn btn-square p-1 btn-md rounded-lg bg-green-500 text-white hover:bg-green-600 justify-start border-none drop-shadow-lg"
  >
    <Whatsapp class="w-full h-full" />
  </a>
</aside>
