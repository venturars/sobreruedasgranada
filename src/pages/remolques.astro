---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import FirstView from "../components/FirstView.astro";
import MainLayout from "../layouts/Main.astro";
import Intro from "../components/Intro.astro";
import CardList from "../components/CardsList.astro";
import Location from "../components/Location.astro";
import Faqs from "../components/Faqs.astro";
import ES from "../locales/ES.json";
---

<html
  lang="en"
  dir="ltr"
  data-theme="sobreruedasgranada"
  class="scroll-smooth scroll-pt-[60px]"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{ES.pages.trailers.metadata.title}</title>
    <meta name="description" content={ES.pages.trailers.metadata.description} />
    <meta name="keywords" content={ES.pages.trailers.metadata.keywords} />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <script src="/scripts/swiped-events.js" defer></script>
  </head>

  <body>
    <MainLayout>
      <FirstView locales={ES.pages.trailers.firstView} />
      <Intro locales={ES.pages.trailers.intro} />
      <CardList locales={ES.sections.trailers} id="remolques" />
      <Location locales={ES.sections.location} />
      <Faqs locales={ES.pages.trailers.faqs} />
    </MainLayout>
  </body>
</html>
