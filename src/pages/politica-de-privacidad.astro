---
import MainLayout from "../layouts/Main.astro";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import ES from "../locales/ES.json";
---

<html
  lang="en"
  dir="ltr"
  data-theme="sobreruedasgranada"
  class="scroll-smooth scroll-pt-[60px]"
>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <title>{ES.pages.privacyPolicy.metadata.title}</title>
    <meta
      name="description"
      content={ES.pages.privacyPolicy.metadata.description}
    />
    <GoogleFontsOptimizer
      url="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Space+Grotesk:wght@300;400;500;600;700&display=swap"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <MainLayout>
      <section class="md:px-16 xs:px-6 px-4 md:pb-16 pb-4 pt-6 md:pt-24">
        <div class="prose mx-auto">
          <Fragment set:html={ES.pages.privacyPolicy.text} />
        </div>
      </section>
    </MainLayout>
  </body>
</html>
